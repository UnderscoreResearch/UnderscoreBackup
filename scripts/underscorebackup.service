[Unit]
Description=Underscore Backup

[Service]
EnvironmentFile=-/etc/default/underscorebackup
User=root
WorkingDirectory=/tmp
StandardOutput=null
StandardError=syslog
SyslogIdentifier=underscorebackup
ExecStart=/opt/underscorebackup/bin/underscorebackup $UNDERSCOREBACKUP_OPTS interactive
SuccessExitStatus=0
TimeoutStopSec=60
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target
